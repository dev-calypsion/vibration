# General
PROJECT_NAME=vibration-platform
ENV=development

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC_SENSORS=sensors/+/vibration

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=raw-waveform
KAFKA_TOPIC_METRICS=metrics
KAFKA_TOPIC_INFERENCE=inference-results

# Database (TimescaleDB)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=vibration_db

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_WAVEFORMS=waveforms

# Vector DB (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# LLM (OpenAI Compatible)
# Replace with your actual key or local endpoint
LLM_API_KEY=sk-placeholder
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4-turbo

# API Gateway
API_SECRET_KEY=super-secret-key-change-me
